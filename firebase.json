{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/invite/**",
        "destination": "/invite.html"
      },
      {
        "source": "/share/**",
        "destination": "/share.html"
      },
      {
        "source": "/payment/success",
        "destination": "/payment-success.html"
      },
      {
        "source": "/payment/cancel",
        "destination": "/payment-cancel.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.mjs",
        "headers": [
          {
            "key": "Content-Type",
            "value": "application/javascript"
          }
        ]
      }
    ]
  }
}
